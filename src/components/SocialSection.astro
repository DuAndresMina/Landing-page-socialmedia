---
interface Props {
  platform: string;
  username: string;
  profileImage: string;
  link: string;
  bgColor: string;
  icon: string;
}

const { platform, username, profileImage, link, bgColor, icon } = Astro.props;
---

<section class={`min-h-screen flex flex-col items-center justify-center ${bgColor} transition-all duration-500`}>
  <div class="max-w-2xl w-full mx-auto p-8 text-center">
    <img
      src={profileImage}
      alt={`${platform} Profile`}
      class="w-32 h-32 rounded-full border-4 border-white shadow-lg mx-auto mb-6"
    />
    
    <h2 class="text-3xl font-bold text-white mb-4">
      <i class={icon}></i> {platform}
    </h2>
    
    <p class="text-xl text-white mb-6">@{username}</p>
    
    <a
      href={link}
      target="_blank"
      rel="noopener noreferrer"
      class="inline-block bg-white text-gray-900 px-8 py-3 rounded-full font-semibold transform hover:scale-105 transition-transform duration-200"
    >
      Follow on {platform}
    </a>
  </div>
</section>